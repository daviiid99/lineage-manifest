<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote fetch="https://github.com" name="rinando" revision="lineage-18.1" />

  <remove-project name="LineageOS/android_build" />
  <project path="build/make" name="rinando/android_build" remote="rinando">
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <remove-project name="LineageOS/android_build_soong" />
  <project path="build/soong" name="rinando/android_build_soong" remote="rinando">
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>


<!-- MicroG [1/2] and Memory optimization changes and Mali colorfade fix/settting -->
<remove-project name="LineageOS/android_frameworks_base" />
<project path="frameworks/base" name="rinando/android_frameworks_base" remote="rinando" />

<!-- MicroG [2/2]-->
<remove-project name="LineageOS/android_packages_apps_PackageInstaller" />
<project path="packages/apps/PermissionController" name="rinando/android_packages_apps_PackageInstaller" remote="rinando" />

<!-- Samsung Blobs -->  
<project path="vendor/samsung" name="rinando/proprietary_vendor_samsung" remote="rinando" />

<!-- Deprecated prebuilts -->
<remove-project name="LineageOS/android_prebuilts_gcc_linux-x86_arm_arm-linux-androideabi-4.9" />
<project path="prebuilts/gcc/linux-x86/arm/arm-linux-androideabi-4.9" name="rinando/android_prebuilts_gcc_linux-x86_arm_arm-linux-androideabi-4.9" remote="rinando" />

<!-- Fix build for deprecated kernel build -->
<remove-project name="LineageOS/android_external_ntfs-3g" />
<project path="external/ntfs-3g" name="rinando/android_external_ntfs-3g" remote="rinando" />

<!-- Fix for old S3 GPS blobs -->
<remove-project name="platform/system/libhidl" />
<project path="system/libhidl" name="rinando/android_system_libhidl" remote="rinando" />

<!-- Hacks to fix legacy blobs -->
<remove-project name="LineageOS/android_bionic" />
<project path="bionic" name="rinando/android_bionic" remote="rinando" />

<!-- Fix hardware button offline charging -->
<remove-project name="LineageOS/android_system_core" />
<project path="system/core" name="rinando/android_system_core" remote="rinando" />

<!-- Galaxy S2 -->
